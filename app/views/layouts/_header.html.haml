%header.header
  .header__main
    .header__main__top
      %h1.header__main__top--title
        = link_to image_tag("logo/logo.png"), "#"
      .search-box
        = form_for "/" do |f|
          = f.text_field :name, class:"search-box__text", placeholder: "キーワードから探す"
          = f.button image_tag("icon/icon-search 1.png")
    .nav
      %ul.nav__left
        %li
          = link_to "商品一覧", "#"
      %ul.nav__right
        %li
          = link_to "ログイン", new_user_session_path
        %li
          = link_to "新規会員登録", new_user_registration_path